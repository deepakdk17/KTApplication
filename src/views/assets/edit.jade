extends ../layout

block content
  h1 Edit Asset
  form(action='/assets/' + asset.id, method='POST')
    input(type='hidden', name='_method', value='PUT')
    .form-group
      label(for='serialNumber') Serial Number
      input.form-control(type='text', name='serialNumber', id='serialNumber', required, value=asset.serialNumber)
    .form-group
      label(for='make') Make
      input.form-control(type='text', name='make', id='make', required, value=asset.make)
    .form-group
      label(for='model') Model
      input.form-control(type='text', name='model', id='model', required, value=asset.model)
    .form-group
      label(for='categoryId') Category
      select.form-control(name='categoryId', id='categoryId')
        each category in categories
          option(value=category.id, selected=asset.categoryId === category.id)= category.name
    .form-group
      label(for='status') Status
      select.form-control(name='status', id='status')
        option(value='in stock', selected=asset.status === 'in stock') In Stock
        option(value='issued', selected=asset.status === 'issued') Issued
        option(value='scrapped', selected=asset.status === 'scrapped') Scrapped
    button.btn.btn-primary(type='submit') Update Asset

extends ../layout

block content
  h1 Add Asset
  form(action='/assets', method='POST')
    .form-group
      label(for='serialNumber') Serial Number
      input.form-control(type='text', name='serialNumber', id='serialNumber', required)
    .form-group
      label(for='make') Make
      input.form-control(type='text', name='make', id='make', required)
    .form-group
      label(for='model') Model
      input.form-control(type='text', name='model', id='model', required)
    .form-group
      label(for='categoryId') Category
      select.form-control(name='categoryId', id='categoryId')
        each category in categories
          option(value=category.id)= category.name
    .form-group
      label(for='status') Status
      select.form-control(name='status', id='status')
        option(value='in stock') In Stock
        option(value='issued') Issued
        option(value='scrapped') Scrapped
    button.btn.btn-primary(type='submit') Add Asset
